class Solution:
    def alternatingMaxLength(self, arr):
        if len(arr) < 2:
            return len(arr)

        up = 1
        down = 1

        for i in range(1, len(arr)):
            if arr[i] > arr[i - 1]:
                up = down + 1
            elif arr[i] < arr[i - 1]:
                down = up + 1

        return max(up, down)
